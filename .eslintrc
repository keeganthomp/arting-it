{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "parserOptions": {
    "ecmaVersion": 2017
},
"plugins": [
  "babel",
  "react",
  "promise"
],
"env": {
  "browser" : true,
  "es6": true
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 200, 2, { "ignoreStrings": true, "ignoreTemplateLiterals": true, "ignoreUrls": true }],
    "object-curly-spacing" : [2, "always"],
    "no-mixed-operators" : 0
  }
}