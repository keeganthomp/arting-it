{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],

    "comma-dangle": ["error", "never"],
    "no-cond-assign": ["error", "always"],

    "no-console": 0
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.0"
    }
  }
}